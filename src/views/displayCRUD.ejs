<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table,
      th,
      td {
        border: 1px solid #000;
        border-collapse: collapse;
      }
      .btn-edit {
        background-color: rgb(101, 213, 9);
        border-radius: 6px;
        width: 50px;
        height: 26px;
        border: none;
        margin: 4px 4px;
        cursor: pointer;
      }
      .btn-delete {
        background-color: rgb(213, 210, 9);
        border-radius: 6px;
        width: 80px;
        height: 26px;
        border: none;
        cursor: pointer;
      }
      .btn-delete:hover,
      .btn-edit:hover {
        opacity: 0.8;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <!-- <th>Action</th> -->
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id%>"
            class="btn-edit"
            type="button"
            >Edit</a
          >
          <a href="" class="btn-delete" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
